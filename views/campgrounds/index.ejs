<% include ../partials/header %>

<div class="container mt-3">
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome To YelpCamp!</h1>
      <p>View our hand-picked campgrounds from all over the world</p>
      <p>
        <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
      </p>
    </div>
  </header>

  <div class="row">
    <% campgrounds.forEach(campground => { %>
    <div class="col-md-3 col-sm-6 mt-3">
      <div class="card camp-card">
        <img class="img-fluid" src="<%= campground.image %>" alt="campground image" />
        <div class="card-body text-center">
          <h6 class="card-text"><%= campground.name %></h6>
          <p class="mt-4 mb-0">
            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary btn-sm">More Info</a>
          </p>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</div>
<% include ../partials/footer %>
