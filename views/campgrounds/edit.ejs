<% include ../partials/header %>

<div class="container d-flex justify-content-center">
  <div class="row">
    <h1 class="mx-auto my-4 text-primary">Edit <%= campground.name %></h1>
    <div class="col-12">
      <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <input
            type="text"
            name="campground[name]"
            class="form-control"
            id="name"
            aria-describedby="name"
            value="<%= campground.name %>"
          />
        </div>
        <div class="form-group">
          <input
            type="number"
            name="campground[price]"
            class="form-control"
            id="price"
            aria-describedby="price"
            value="<%= campground.price %>"
            min="0.01"
            step="0.01"
            />
        </div>
        <div class="form-group">
          <input
            type="text"
            name="campground[image]"
            class="form-control"
            id="image"
            aria-describedby="Image URL"
            value="<%= campground.image %>"
          />
        </div>
        <div class="form-group">
          <input
            type="text"
            name="campground[description]"
            class="form-control"
            id="description"
            aria-describedby="Campground Description"
            value="<%= campground.description %>"
          />
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
      </form>
      <p>
        <a href="/campgrounds/<%= campground._id %>">Go Back</a>
      </p>
    </div>
  </div>
</div>

<% include ../partials/footer %>
