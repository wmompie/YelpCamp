<% include ../partials/header %>

<div class="container d-flex justify-content-center">
  <div class="row">
    <h1 class="mx-auto my-4 text-primary">Create a New Campground</h1>
    <div class="col-12">
      <form action="/campgrounds" method="post">
        <div class="form-group">
          <input type="text" name="name" class="form-control" id="name" aria-describedby="name" placeholder="name" />
        </div>
        <div class="form-group">
          <input type="number" name="price" class="form-control" id="price" aria-describedby="price" placeholder="price" min="0.01" step="0.01" />
        </div>
        <div class="form-group">
          <input
            type="text"
            name="image"
            class="form-control"
            id="image"
            aria-describedby="Image URL"
            placeholder="image URL"
          />
        </div>
        <div class="form-group">
          <input
            type="text"
            name="description"
            class="form-control"
            id="description"
            aria-describedby="Campground Description"
            placeholder="description"
          />
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
      </form>
      <p>
        <a href="/campgrounds">Go Back</a>
      </p>
    </div>
  </div>
</div>

<% include ../partials/footer %>
